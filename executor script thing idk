--[[ 
    EJER NEGAN EXECUTOR V2 - FUTURISTIC INTERFACE
    Optimized for Delta, Xeno, and PC
]]

local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- 1. CLEANUP (Prevents overlapping if executed twice)
if CoreGui:FindFirstChild("EJER_PREMIUM") then
    CoreGui:FindFirstChild("EJER_PREMIUM"):Destroy()
end

-- 2. CREATE UI CONTAINER
local MainGui = Instance.new("ScreenGui")
MainGui.Name = "EJER_PREMIUM"
MainGui.Parent = CoreGui
MainGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
MainGui.DisplayOrder = 9999

-- 3. THE FLOATING "CURSIVE E" BUTTON (CENTERED INITIALLY)
local E_Button = Instance.new("ImageButton")
local ButtonCorner = Instance.new("UICorner")
local ButtonStroke = Instance.new("UIStroke")

E_Button.Name = "E_Button"
E_Button.Parent = MainGui
E_Button.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
E_Button.Position = UDim2.new(0.5, -35, 0.5, -35) -- DEAD CENTER
E_Button.Size = UDim2.new(0, 70, 0, 70)
E_Button.Image = "rbxassetid://15671560492" -- Cursive E
E_Button.Visible = true
E_Button.Draggable = true
E_Button.Active = true

ButtonCorner.CornerRadius = UDim.new(0, 50)
ButtonCorner.Parent = E_Button

ButtonStroke.Color = Color3.fromRGB(0, 255, 255) -- Cyan Glow
ButtonStroke.Thickness = 2
ButtonStroke.Parent = E_Button

-- 4. THE MAIN EXECUTOR PANEL (FUTURISTIC LOOK)
local MainFrame = Instance.new("Frame")
local MainCorner = Instance.new("UICorner")
local TopBar = Instance.new("Frame")
local Title = Instance.new("TextLabel")

MainFrame.Name = "MainFrame"
MainFrame.Parent = MainGui
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
MainFrame.BorderSizePixel = 0
MainFrame.Position = UDim2.new(0.5, -250, 0.5, -175) -- Centered
MainFrame.Size = UDim2.new(0, 500, 0, 350)
MainFrame.Visible = false
MainFrame.ClipsDescendants = true

MainCorner.CornerRadius = UDim.new(0, 10)
MainCorner.Parent = MainFrame

-- Top Bar Branding
TopBar.Size = UDim2.new(1, 0, 0, 40)
TopBar.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
TopBar.Parent = MainFrame

Title.Parent = TopBar
Title.Text = "EJER EXECUTOR | v2.0"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Size = UDim2.new(1, 0, 1, 0)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 18

-- 5. BUTTON CLICK ANIMATION (Open/Close)
local function toggleUI()
    if MainFrame.Visible == false then
        MainFrame.Visible = true
        MainFrame.Size = UDim2.new(0, 0, 0, 0)
        MainFrame:TweenSize(UDim2.new(0, 500, 0, 350), "Out", "Quad", 0.3, true)
        E_Button.Visible = false
    else
        MainFrame:TweenSize(UDim2.new(0, 0, 0, 0), "In", "Quad", 0.3, true, function()
            MainFrame.Visible = false
            E_Button.Visible = true
        end)
    end
end

E_Button.MouseButton1Click:Connect(toggleUI)

-- 6. ADDING A MINIMIZE BUTTON INSIDE MAIN FRAME
local MiniBtn = Instance.new("TextButton")
MiniBtn.Parent = TopBar
MiniBtn.Text = "-"
MiniBtn.Position = UDim2.new(1, -40, 0, 0)
MiniBtn.Size = UDim2.new(0, 40, 1, 0)
MiniBtn.BackgroundTransparency = 1
MiniBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
MiniBtn.TextSize = 25
MiniBtn.MouseButton1Click:Connect(toggleUI)

-- 7. SEARCHABLE SCRIPT HUB (The "Thousands of Lines" style setup)
-- [Note: You can add as many buttons as you want here]
local Container = Instance.new("ScrollingFrame")
Container.Parent = MainFrame
Container.Position = UDim2.new(0, 10, 0, 50)
Container.Size = UDim2.new(1, -20, 1, -60)
Container.BackgroundTransparency = 1
Container.ScrollBarThickness = 2

local UIList = Instance.new("UIListLayout")
UIList.Parent = Container
UIList.Padding = UDim.new(0, 5)

-- FUNCTION TO ADD SCRIPTS QUICKLY
local function AddScript(name, callback)
    local b = Instance.new("TextButton")
    b.Parent = Container
    b.Size = UDim2.new(1, 0, 0, 40)
    b.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    b.Text = "  " .. name
    b.TextColor3 = Color3.fromRGB(255, 255, 255)
    b.TextXAlignment = Enum.TextXAlignment.Left
    b.Font = Enum.Font.Gotham
    local c = Instance.new("UICorner")
    c.CornerRadius = UDim.new(0, 6)
    c.Parent = b
    b.MouseButton1Click:Connect(callback)
end

-- ADD YOUR SCRIPTS HERE
AddScript("Infinite Yield", function() 
    loadstring(game:HttpGet('https://raw.githubusercontent.com'))() 
end)

AddScript("Build A Boat AutoFarm", function()
    print("Executing Build a Boat...")
end)

-- NOTIFICATION
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "EJER LOADED",
    Text = "Press the Cursive E in the center!",
    Duration = 5
})
