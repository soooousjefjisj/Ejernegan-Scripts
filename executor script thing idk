-- [[ EJER NEGAN EXECUTOR V3 - XENO-INSPIRED INTERFACE ]]
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- 1. CLEANUP (Prevents clones)
if CoreGui:FindFirstChild("EJER_FUTURISTIC") then CoreGui:FindFirstChild("EJER_FUTURISTIC"):Destroy() end

local MainGui = Instance.new("ScreenGui")
MainGui.Name = "EJER_FUTURISTIC"
MainGui.Parent = CoreGui
MainGui.DisplayOrder = 10000

-- 2. THE "E" TOGGLE BUTTON (Centered & Glowing)
local E_Button = Instance.new("ImageButton")
local E_Corner = Instance.new("UICorner")
local E_Stroke = Instance.new("UIStroke")

E_Button.Name = "E_Toggle"
E_Button.Parent = MainGui
E_Button.Position = UDim2.new(0.5, -40, 0.5, -40) -- Exact Center
E_Button.Size = UDim2.new(0, 80, 0, 80)
E_Button.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
E_Button.Image = "rbxassetid://15671560492" -- Cursive E
E_Button.Draggable = true
E_Button.Active = true

E_Corner.CornerRadius = UDim.new(1, 0)
E_Corner.Parent = E_Button
E_Stroke.Color = Color3.fromRGB(0, 200, 255)
E_Stroke.Thickness = 3
E_Stroke.Parent = E_Button

-- 3. THE MAIN "XENO" STYLE PANEL
local MainFrame = Instance.new("Frame")
local FrameCorner = Instance.new("UICorner")
local FrameStroke = Instance.new("UIStroke")
local TitleBar = Instance.new("Frame")
local TitleText = Instance.new("TextLabel")

MainFrame.Name = "MainFrame"
MainFrame.Parent = MainGui
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
MainFrame.Position = UDim2.new(0.5, -275, 0.5, -190)
MainFrame.Size = UDim2.new(0, 550, 0, 380)
MainFrame.Visible = false
MainFrame.ClipsDescendants = true

FrameCorner.CornerRadius = UDim.new(0, 12)
FrameCorner.Parent = MainFrame
FrameStroke.Color = Color3.fromRGB(30, 30, 30)
FrameStroke.Thickness = 2
FrameStroke.Parent = MainFrame

-- Title Bar
TitleBar.Size = UDim2.new(1, 0, 0, 45)
TitleBar.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
TitleBar.Parent = MainFrame

TitleText.Parent = TitleBar
TitleText.Text = "  EJER EXECUTOR PREMIUM"
TitleText.TextColor3 = Color3.fromRGB(255, 255, 255)
TitleText.Font = Enum.Font.GothamBold
TitleText.TextSize = 20
TitleText.Size = UDim2.new(1, 0, 1, 0)
TitleText.TextXAlignment = Enum.TextXAlignment.Left

-- 4. SCRIPT HUB & SEARCH BAR
local SearchBox = Instance.new("TextBox")
SearchBox.Parent = MainFrame
SearchBox.Position = UDim2.new(0, 15, 0, 55)
SearchBox.Size = UDim2.new(1, -30, 0, 40)
SearchBox.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
SearchBox.PlaceholderText = "Search Scripts..."
SearchBox.TextColor3 = Color3.fromRGB(255, 255, 255)

local ScrollContainer = Instance.new("ScrollingFrame")
ScrollContainer.Parent = MainFrame
ScrollContainer.Position = UDim2.new(0, 15, 0, 105)
ScrollContainer.Size = UDim2.new(1, -30, 1, -120)
ScrollContainer.BackgroundTransparency = 1
ScrollContainer.ScrollBarThickness = 3

local List = Instance.new("UIListLayout")
List.Parent = ScrollContainer
List.Padding = UDim.new(0, 10)

-- Function to add script buttons
local function AddScript(name, callback)
    local btn = Instance.new("TextButton")
    btn.Parent = ScrollContainer
    btn.Size = UDim2.new(1, 0, 0, 45)
    btn.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    btn.Text = "  " .. name
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.Gotham
    btn.TextXAlignment = Enum.TextXAlignment.Left
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    btn.MouseButton1Click:Connect(callback)
end

-- 5. SCRIPT LIST (Add as many as you want here)
AddScript("Infinite Yield", function() loadstring(game:HttpGet('https://raw.githubusercontent.com'))() end)
AddScript("CMD-X", function() loadstring(game:HttpGet('https://raw.githubusercontent.com'))() end)
AddScript("Blox Fruits AutoFarm (Mockup)", function() print("AutoFarm Active!") end)

-- 6. TOGGLE LOGIC
E_Button.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
    E_Button.Visible = not MainFrame.Visible
end)

local CloseBtn = Instance.new("TextButton")
CloseBtn.Parent = TitleBar
CloseBtn.Position = UDim2.new(1, -45, 0, 0)
CloseBtn.Size = UDim2.new(0, 45, 1, 0)
CloseBtn.Text = "X"
CloseBtn.TextColor3 = Color3.fromRGB(200, 0, 0)
CloseBtn.BackgroundTransparency = 1
CloseBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    E_Button.Visible = true
end)

print("EJER EXECUTOR LOADED SUCCESSFULLY")

