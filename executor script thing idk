local Rayfield = loadstring(game:HttpGet('https://sirius.menu'))()

-- DETECTION
local IsMobile = game:GetService("UserInputService").TouchEnabled
local FinalSize = IsMobile and UDim2.new(0, 360, 0, 220) or UDim2.new(0, 500, 0, 350)

-- WINDOW
local Window = Rayfield:CreateWindow({
   Name = "EJER Executor",
   LoadingTitle = "EJER Mobile & PC",
   LoadingSubtitle = "by EJER",
   ConfigurationSaving = { Enabled = false },
   KeySystem = false
})

-- THE BUTTON (FIXED & VISIBLE)
local ScreenGui = Instance.new("ScreenGui")
local ToggleButton = Instance.new("ImageButton")
local Corner = Instance.new("UICorner")

ScreenGui.Name = "EJER_GUI"
ScreenGui.Parent = game:GetService("CoreGui")
ScreenGui.DisplayOrder = 999 -- Ensures it stays on top

ToggleButton.Name = "E_Button"
ToggleButton.Parent = ScreenGui
ToggleButton.BackgroundColor3 = Color3.fromRGB(200, 0, 0) -- Bright Red so you can see it!
ToggleButton.Position = UDim2.new(0.1, 0, 0.2, 0)
ToggleButton.Size = UDim2.new(0, 70, 0, 70) -- Bigger size
ToggleButton.Active = true
ToggleButton.Draggable = true -- Standard Draggable
ToggleButton.Image = "rbxassetid://15671560492" -- Cursive E

Corner.Parent = ToggleButton

ToggleButton.MouseButton1Click:Connect(function()
    -- Logic to toggle Rayfield Visibility
    local main = game:GetService("CoreGui"):FindFirstChild("Rayfield")
    if main then
        main.Enabled = not main.Enabled
    end
end)

-- TABS
local HubTab = Window:CreateTab("Script Hub", 4483362458)
HubTab:CreateInput({
   Name = "Search Scripts...",
   PlaceholderText = "Search...",
   Callback = function(t) print(t) end,
})

HubTab:CreateButton({
   Name = "Infinite Yield",
   Callback = function() loadstring(game:HttpGet('https://raw.githubusercontent.com'))() end,
})

local ExecTab = Window:CreateTab("Executor", 4483345998)
local Code = ""
ExecTab:CreateInput({
   Name = "Source",
   PlaceholderText = "Paste here...",
   Callback = function(t) Code = t end,
})

ExecTab:CreateButton({
   Name = "Execute",
   Callback = function() assert(loadstring(Code))() end,
})
